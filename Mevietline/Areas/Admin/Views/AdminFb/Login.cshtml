@model MevietLine.Models.LoginViewModel

@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="title text-center"><span>Đăng nhập Admin</span></div>
<form method="post" action="~/AdminFb/Login" class="d-flex flex-column align-items-center">
    <input type="hidden" id="RememberMe" name="RememberMe" asp-for="RememberMe" value="true" />

    <div class="row mb-3">
        <i class="fas fa-user"></i>
        <input type="text" class="form-control" id="UserName" name="UserName" asp-for="Username" />

    </div>
    <div class="row mb-3">
        <i class="fas fa-lock"></i>
        <input type="password" id="Password" asp-for="Password" name="Password" class="form-control" />

    </div>
    <div class="row button">
        <input type="submit" value="Đăng nhập">
    </div>
</form>


