
@model MevietLine.Models.DataUserViewModel.DataUserCRUDViewModels
@{
    ViewData["Title"] = "Đăng ký thành viên";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MevietLine</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MevietLine.styles.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js"></script>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.6.11/vue.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

    <link href="~/datatables/datatables.css" rel="stylesheet" />
    <link href="~/datatables/datatables.min.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="/upload/60ccc24b-2ea4-4cae-8c78-7a2314c6dfd5_logo mvl.png">

</head>

<body>
 

    <section class="vh-100" style="background-color: #508bfc;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <span class="text-danger">@ViewBag.UserName</span>
                   
                    <form class="card shadow-2-strong" style="border-radius: 1rem;" asp-controller="Home" asp-action="Register" method="post">
                        <div class="card-body p-5">
                            <input type="hidden" name="TienDangCo" asp-for="TienDangCo" id="TienDangCo" value="0">

                            <h3 class="mb-5 text-center">Đăng ký thành viên</h3>
                            <div class="form-outline mb-4">
                                <label class="form-label">Tên đăng nhập</label>
                                <input type="text" name="UserName" placeholder="Username" asp-for="UserName" id="NameUser" class="form-control form-control-lg" />
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>

                            <div class="form-outline mb-4">
                                <label class="form-label">Mật khẩu mới</label>
                                <input type="password" name="Password" asp-for="Password" id="Password" placeholder="Password" class="form-control form-control-lg" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>

                            <div class="form-outline mb-4">
                                <label class="form-label">Nhập lại mật khẩu</label>
                                <input type="password" name="ConfirmPassword" asp-for="ConfirmPassword" id="ConfirmPassword" placeholder="ConfirmPassword" class="form-control form-control-lg" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>


                            <div class="text-center">
                                <button class="btn btn-primary btn-lg btn-block" type="submit">Đăng Ký</button>
                            </div>
                            <hr class="my-4">
                          
                            <div class="text-center p-t-136">
                                <a class="txt2" href="~/Home/Login">
                                    Đã có tài khoản
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="~/datatables/datatables.js"></script>
    <script src="~/font-awesome/js/all.min.js"></script>
    <script src="~/datatables/datatables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
